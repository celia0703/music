      <mapping class="cn.com.scitc.lover.model.Admin"/>
      <mapping class="cn.com.scitc.lover.model.Album"/>
      <mapping class="cn.com.scitc.lover.model.Category"/>
      <mapping class="cn.com.scitc.lover.model.Collections"/>
      <mapping class="cn.com.scitc.lover.model.Members"/>
      <mapping class="cn.com.scitc.lover.model.Music"/>
      <mapping class="cn.com.scitc.lover.model.Recommend"/>
      <mapping class="cn.com.scitc.lover.model.Singers"/>
      <mapping class="cn.com.scitc.lover.model.Users"/>
      <mapping class="cn.com.scitc.lover.model.Comments"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>